<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title><%= title %></title>
</head>
<h1><%= title %></h1>
<body>
 <h2>My Skin Profile</h1>
  <div id="profile">
    <section>
      <tr>
        <th>Skin Type:</th>
        <th>Age:</th>
        <th>Concerns:</th>
        <th></th>
      </tr>
    </section>
    <body>
      <% profiles.forEach(p => { %>
        <div>
        <div id="profile-results">
          <div><%=p.skinType.skinType %></div>
          <div><%=p.skinType.age %></div>
          <div><%=p.skinType.skinConcerns %></div>
          <p><h3>My Routine</h3>
            <a href="/profiles/<%= p._id %>/products/new">Add New Product</a></p>   
        </div>
        <div id="products">
         <% p.product.forEach( product => { %> 
          <p><%=product.productType %></p>
          <p><%=product.brand %></p>
          <p><%=product.usage %></p>
          <p><%=product.completed %></p>
          <a href="/profiles/<%= product._id %>/products/edit">
            <button type="submit">Update Product</button>
          </a>
          <form id="add-review-form" method="POST" action="/products/<%= product._id %>/reviews">
            <label>Review:</label>
            <textarea name="content"></textarea>
            <label>Rating</label>
            <select name="rating">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5" selected>5</option>
            </select>
            <input type="submit" value="Add Review">
          </form>
          <% if (product.reviews.length) { %>
              <table>
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Review</th>
                    <th>Rating</th>
                  </tr>
                </thead>
                <tbody>
                  <% product.reviews.forEach(function(r) { %>
                    <tr>
                      <td><%= r.createdAt.toLocaleDateString() %></td>
                      <td><%= r.content %></td>
                      <td><%= r.rating %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
          <% } else { %>
              <h5>No Reviews Yet</h5>
          <% } %>


         <% }) %>
         </div>
        </div>
        <% }) %>
    </body>
  </div>
  <main>

    